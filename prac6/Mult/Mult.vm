// Calculates a = x*y
// a is a local variable
// x & y are static variables

    push constant 0
    pop local 0

    push static 1
    pop static 2
    

    // check if y is neg
    push static 1
    push constant 0
    lt
    if-goto NEGATIVE_Y

label LOOP
    //check if y is = 0
    push static 2
    push constant 0
    eq
    if-goto END

    // sub 1 from y and add x to accumulator
    push static 2
    push constant 1
    sub
    pop static 2
    
    push static 0
    push local 0
    add
    pop local 0
    goto LOOP

label NEGATIVE_Y
    push local 0
    neg
    pop local 0
    push static 2
    neg
    pop static 2
    goto LOOP

label END
    goto END
